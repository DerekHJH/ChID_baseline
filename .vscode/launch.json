{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "1"
            },
            "args":
            [
                "--model_name_or_path",
                "hfl/chinese-roberta-wwm-ext",
                "--do_train",
                "--do_eval",
                "--train_file",
                "../data/train_data_1w.json",
                "--validation_file",
                "../data/dev_data.json",
                "--test_file",
                "../data/test_data.json",
                "--metric_for_best_model",
                "eval_accuracy",
                "--load_best_model_at_end",
                "--learning_rate",
                "5e-5",
                "--evaluation_strategy",
                "epoch",
                "--num_train_epochs",
                "5",
                "--output_dir",
                "./tmp",
                "--per_device_eval_batch_size",
                "32",
                "--per_device_train_batch_size",
                "32",
                "--seed",
                "42",
                "--max_seq_length",
                "512",
                "--warmup_ratio",
                "0.1",
                "--save_strategy",
                "epoch",
                "--overwrite_output"
            ]
        }
    ]
}